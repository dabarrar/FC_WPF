<Window x:Class="FC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FC_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu Width="800" DockPanel.Dock="Top" IsMainMenu="True" Height="20">
                <MenuItem x:Name="Equipo"  Header="Equipo">
                    <MenuItem Header="Agregar" x:Name="btnAgregar" Click="Agregar_Click"/>
                    <MenuItem Header="Listar Todos" x:Name="btnListar" Click="Listar_Click"/>
                </MenuItem>
                <MenuItem x:Name="Informacion" Header="Informacion">
                    <MenuItem x:Name="Acerca_DE"  Header="Acerca de" Click="Acerca_DE_Click"/>
                </MenuItem>
            </Menu>

        </DockPanel>

    </Grid>
</Window>
